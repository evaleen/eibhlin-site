{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "pretty": true,
    "strict": true,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "typeRoots": ["./src/types"]
  }
}
